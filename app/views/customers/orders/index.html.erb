<%# ============================================ %>
<%# app/views/customer/orders/index.html.erb %>
<%# Feature 3.2.1 - 顾客订单历史列表 %>
<%# ============================================ %>

<% content_for :title, "My Orders - Northern Harvest" %>

<div class="container py-5">
  <%= render 'shared/breadcrumbs', items: [
    { name: 'Home', path: root_path },
    { name: 'My Account', path: edit_customer_registration_path },
    { name: 'Orders', path: nil }
  ] %>

  <h1 class="h3 mb-4">My Orders</h1>

  <% if @orders.any? %>
    <div class="card border-0 shadow-sm">
      <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
          <thead class="table-light">
            <tr>
              <th>Order #</th>
              <th>Date</th>
              <th>Status</th>
              <th>Items</th>
              <th class="text-end">Total</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td>
                  <strong>#<%= order.id.to_s.rjust(6, '0') %></strong>
                </td>
                <td>
                  <%= order.created_at.strftime("%b %d, %Y") %>
                </td>
                <td>
                  <%= order_status_badge(order.status) %>
                </td>
                <td>
                  <%= order.order_items.count %> items
                </td>
                <td class="text-end fw-bold">
                  <%= number_to_currency(order.grand_total) %>
                </td>
                <td class="text-end">
                  <%= link_to "View Details", customers_order_path(order), 
                      class: "btn btn-sm btn-outline-success" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Pagination -->
    <div class="d-flex justify-content-center mt-4">
      <%= paginate @orders %>
    </div>
  <% else %>
    <div class="text-center py-5">
      <i class="bi bi-bag text-muted" style="font-size: 4rem;"></i>
      <h4 class="mt-3">No orders yet</h4>
      <p class="text-muted">Start shopping to see your orders here.</p>
      <%= link_to "Browse Products", products_path, class: "btn btn-success" %>
    </div>
  <% end %>
</div>
