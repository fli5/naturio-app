<%# Feature 3.1.4 %>
<% content_for :title, "Create Account - Northern Harvest" %>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card border-0 shadow">
        <div class="card-body p-5">
          <!-- Header -->
          <div class="text-center mb-4">
            <i class="bi bi-person-plus-fill text-success" style="font-size: 3rem;"></i>
            <h2 class="mt-3">Create Account</h2>
          </div>
          
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), 
              html: { class: 'needs-validation' }) do |f| %>
            
            <!-- Error Messages -->
            <% if resource.errors.any? %>
              <div class="alert alert-danger">
                <ul class="mb-0">
                  <% resource.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <!-- Username -->
            <div class="mb-3">
              <%= f.label :username, class: "form-label" %>
              <%= f.text_field :username, 
                  class: "form-control #{'is-invalid' if resource.errors[:username].any?}",
                  placeholder: "Choose a username",
                  autofocus: true,
                  required: true %>
              <div class="form-text">3-50 characters, must be unique</div>
            </div>

            <!-- Email -->
            <div class="mb-3">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, 
                  class: "form-control #{'is-invalid' if resource.errors[:email].any?}",
                  placeholder: "your@email.com",
                  autocomplete: "email",
                  required: true %>
            </div>

            <!-- Password -->
            <div class="mb-3">
              <%= f.label :password, class: "form-label" %>
              <%= f.password_field :password, 
                  class: "form-control #{'is-invalid' if resource.errors[:password].any?}",
                  placeholder: "Create a password",
                  autocomplete: "new-password",
                  required: true %>
              <div class="form-text">Minimum 6 characters</div>
            </div>

            <!-- Confirm Password -->
            <div class="mb-4">
              <%= f.label :password_confirmation, "Confirm Password", class: "form-label" %>
              <%= f.password_field :password_confirmation, 
                  class: "form-control",
                  placeholder: "Confirm your password",
                  autocomplete: "new-password",
                  required: true %>
            </div>

            <!-- Submit -->
            <div class="d-grid">
              <%= f.submit "Create Account", class: "btn btn-success btn-lg" %>
            </div>
          <% end %>

          <!-- Links -->
          <div class="text-center mt-4">
            <p class="text-muted mb-0">
              Already have an account? 
              <%= link_to "Sign in", new_customer_session_path, class: "text-success" %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>