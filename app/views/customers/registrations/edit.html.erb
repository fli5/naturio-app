<% content_for :title, "Edit Profile - Northern Harvest" %>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card border-0 shadow">
        <div class="card-body p-5">
          <h2 class="mb-4">Edit Profile</h2>
          
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), 
              html: { method: :put }) do |f| %>
            
            <% if resource.errors.any? %>
              <div class="alert alert-danger">
                <ul class="mb-0">
                  <% resource.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= f.label :username, class: "form-label" %>
              <%= f.text_field :username, class: "form-control", required: true %>
            </div>

            <div class="mb-3">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, class: "form-control", required: true %>
            </div>

            <hr class="my-4">
            <p class="text-muted">Leave password blank if you don't want to change it</p>

            <div class="mb-3">
              <%= f.label :password, "New Password", class: "form-label" %>
              <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
            </div>

            <div class="mb-3">
              <%= f.label :password_confirmation, class: "form-label" %>
              <%= f.password_field :password_confirmation, class: "form-control" %>
            </div>

            <hr class="my-4">

            <div class="mb-4">
              <%= f.label :current_password, class: "form-label" %>
              <%= f.password_field :current_password, class: "form-control", required: true %>
              <div class="form-text">We need your current password to confirm changes</div>
            </div>

            <div class="d-grid">
              <%= f.submit "Update Profile", class: "btn btn-success btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>