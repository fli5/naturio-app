<!-- app/views/home/index.html.erb -->
<!-- Feature 2.1 - 首页产品展示 -->

<% content_for :title, "Northern Harvest - Organic & Natural Foods" %>

<!-- Hero Section -->
<section class="bg-success text-white py-5">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6">
        <h1 class="display-4 fw-bold mb-3">
          Fresh Organic Foods Delivered to Your Door
        </h1>
        <p class="lead mb-4">
          Discover premium organic produce, natural supplements, and eco-friendly products. 
          Supporting local Manitoba farmers since 2009.
        </p>
        <div class="d-flex gap-3">
          <%= link_to "Shop Now", products_path, class: "btn btn-light btn-lg px-4" %>
          <%= link_to "Learn More", page_path('about'), class: "btn btn-outline-light btn-lg px-4" %>
        </div>
      </div>
      <div class="col-lg-6 d-none d-lg-block text-center">
        <i class="bi bi-basket3-fill" style="font-size: 200px; opacity: 0.3;"></i>
      </div>
    </div>
  </div>
</section>

<!-- Categories Section -->
<section class="py-5 bg-light">
  <div class="container">
    <h2 class="text-center mb-4">Shop by Category</h2>
    <div class="row g-4">
      <% @categories.each do |category| %>
        <div class="col-6 col-md-4 col-lg-2">
          <%= link_to products_path(category: category.id), class: "text-decoration-none" do %>
            <div class="card h-100 border-0 shadow-sm text-center category-card">
              <div class="card-body py-4">
                <div class="mb-3">
                  <i class="bi bi-<%= category_icon(category.name) %> text-success" 
                     style="font-size: 2.5rem;"></i>
                </div>
                <h6 class="card-title text-dark mb-1"><%= category.name %></h6>
                <small class="text-muted"><%= category.products.count %> items</small>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section>

<!-- On Sale Section -->
<% if @featured_products.any? %>
  <section class="py-5">
    <div class="container">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
          <i class="bi bi-tag-fill text-danger me-2"></i>On Sale
        </h2>
        <%= link_to "View All", products_path(filter: 'on_sale'), class: "btn btn-outline-success" %>
      </div>
      <div class="row g-4">
        <% @featured_products.each do |product| %>
          <div class="col-6 col-md-4 col-lg-3">
            <%= render 'shared/product_card', product: product %>
          </div>
        <% end %>
      </div>
    </div>
  </section>
<% end %>

<!-- New Arrivals Section -->
<% if @new_products.any? %>
  <section class="py-5 bg-light">
    <div class="container">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
          <i class="bi bi-stars text-warning me-2"></i>New Arrivals
        </h2>
        <%= link_to "View All", products_path(filter: 'new'), class: "btn btn-outline-success" %>
      </div>
      <div class="row g-4">
        <% @new_products.each do |product| %>
          <div class="col-6 col-md-4 col-lg-3">
            <%= render 'shared/product_card', product: product %>
          </div>
        <% end %>
      </div>
    </div>
  </section>
<% end %>

<!-- Features Section -->
<section class="py-5">
  <div class="container">
    <div class="row g-4 text-center">
      <div class="col-md-4">
        <div class="p-4">
          <i class="bi bi-truck text-success mb-3" style="font-size: 3rem;"></i>
          <h5>Free Delivery</h5>
          <p class="text-muted mb-0">Free shipping on orders over $50 in Winnipeg</p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="p-4">
          <i class="bi bi-shield-check text-success mb-3" style="font-size: 3rem;"></i>
          <h5>100% Organic</h5>
          <p class="text-muted mb-0">Certified organic products from trusted sources</p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="p-4">
          <i class="bi bi-heart text-success mb-3" style="font-size: 3rem;"></i>
          <h5>Local Support</h5>
          <p class="text-muted mb-0">Supporting Manitoba farmers and producers</p>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Newsletter Section -->
<section class="py-5 bg-success text-white">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-6 text-center">
        <h3 class="mb-3">Stay Updated</h3>
        <p class="mb-4">Subscribe to our newsletter for exclusive deals and health tips.</p>
        <form class="d-flex gap-2 justify-content-center">
          <input type="email" class="form-control" placeholder="Enter your email" 
                 style="max-width: 300px;">
          <button type="submit" class="btn btn-light">Subscribe</button>
        </form>
      </div>
    </div>
  </div>
</section>