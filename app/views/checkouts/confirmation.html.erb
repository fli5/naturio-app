<%# app/views/checkouts/confirmation.html.erb %>
<%# Feature 3.1.3 ✯ - Step 3: 订单确认 %>

<% content_for :title, "Order Confirmed - Northern Harvest" %>

<div class="container py-5">
  <!-- Progress Steps -->
  <%= render 'checkouts/progress', step: 3 %>

  <div class="row justify-content-center">
    <div class="col-lg-8">
      <!-- Success Message -->
      <div class="text-center mb-5">
        <div class="mb-4">
          <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
        </div>
        <h1 class="h2">Thank You for Your Order!</h1>
        <p class="lead text-muted">
          Your order has been placed successfully.
        </p>
        <p class="text-muted">
          Order #<strong><%= @order.id.to_s.rjust(6, '0') %></strong> | 
          <%= @order.created_at.strftime("%B %d, %Y at %l:%M %p") %>
        </p>
      </div>

      <!-- Order Details Card -->
      <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white py-3">
          <h5 class="mb-0">Order Details</h5>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table align-middle mb-0">
              <thead class="table-light">
                <tr>
                  <th>Product</th>
                  <th class="text-center">Qty</th>
                  <th class="text-end">Price</th>
                  <th class="text-end">Subtotal</th>
                </tr>
              </thead>
              <tbody>
                <% @order_items.each do |item| %>
                  <tr>
                    <td>
                      <div class="d-flex align-items-center">
                        <div class="me-3" style="width: 50px;">
                          <% if item.product.image.attached? %>
                            <%= image_tag item.product.image.variant(resize_to_limit: [50, 50]), 
                                class: "rounded" %>
                          <% end %>
                        </div>
                        <span><%= item.product.name %></span>
                      </div>
                    </td>
                    <td class="text-center"><%= item.quantity %></td>
                    <td class="text-end"><%= number_to_currency(item.purchase_price) %></td>
                    <td class="text-end fw-bold"><%= number_to_currency(item.subtotal) %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <div class="row g-4">
        <!-- Shipping Address -->
        <div class="col-md-6">
          <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
              <h6 class="text-muted mb-3">
                <i class="bi bi-truck me-1"></i> Shipping Address
              </h6>
              <address class="mb-0">
                <%= @order.address.street_address %><br>
                <%= @order.address.city %>, <%= @order.address.province.code %><br>
                <%= @order.address.postal_code %><br>
                Canada
              </address>
            </div>
          </div>
        </div>

        <!-- Order Summary -->
        <div class="col-md-6">
          <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
              <h6 class="text-muted mb-3">
                <i class="bi bi-receipt me-1"></i> Order Summary
              </h6>
              
              <div class="d-flex justify-content-between small mb-1">
                <span>Subtotal</span>
                <span><%= number_to_currency(@order.subtotal) %></span>
              </div>
              
              <% if @order.gst_amount > 0 %>
                <div class="d-flex justify-content-between small mb-1">
                  <span>GST</span>
                  <span><%= number_to_currency(@order.gst_amount) %></span>
                </div>
              <% end %>
              
              <% if @order.pst_amount > 0 %>
                <div class="d-flex justify-content-between small mb-1">
                  <span>PST</span>
                  <span><%= number_to_currency(@order.pst_amount) %></span>
                </div>
              <% end %>
              
              <% if @order.hst_amount > 0 %>
                <div class="d-flex justify-content-between small mb-1">
                  <span>HST</span>
                  <span><%= number_to_currency(@order.hst_amount) %></span>
                </div>
              <% end %>
              
              <hr class="my-2">
              
              <div class="d-flex justify-content-between">
                <strong>Total</strong>
                <strong class="text-success"><%= number_to_currency(@order.grand_total) %></strong>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Order Status -->
      <div class="alert alert-warning mt-4">
        <i class="bi bi-clock me-2"></i>
        <strong>Order Status:</strong> <%= @order.status.titleize %><br>
        <small>Your order is awaiting payment. You will receive an email with payment instructions shortly.</small>
      </div>

      <!-- Action Buttons -->
      <div class="d-flex justify-content-center gap-3 mt-4">
        <%= link_to customer_order_path(@order), class: "btn btn-outline-success" do %>
          <i class="bi bi-eye me-1"></i> View Order Details
        <% end %>
        <%= link_to products_path, class: "btn btn-success" do %>
          <i class="bi bi-bag me-1"></i> Continue Shopping
        <% end %>
      </div>
    </div>
  </div>
</div>