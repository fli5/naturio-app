<%# app/views/checkouts/review.html.erb %>
<%# Feature 3.1.3 ✯ - Step 2: 订单预览（发票）%>
<%# Feature 3.2.3 - 显示税费（GST/PST/HST）%>

<% content_for :title, "Checkout - Review Order" %>

<div class="container py-5">
  <%= render 'shared/breadcrumbs', items: [
    { name: 'Home', path: root_path },
    { name: 'Cart', path: cart_path },
    { name: 'Checkout', path: checkouts_path },
    { name: 'Review', path: nil }
  ] %>

  <!-- Progress Steps -->
  <%= render 'checkouts/progress', step: 2 %>

  <div class="row">
    <div class="col-lg-8">
      <!-- Order Items -->
      <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white py-3">
          <h4 class="mb-0">
            <i class="bi bi-receipt me-2"></i>Order Review
          </h4>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
              <thead class="table-light">
                <tr>
                  <th>Product</th>
                  <th class="text-center">Qty</th>
                  <th class="text-end">Price</th>
                  <th class="text-end">Subtotal</th>
                </tr>
              </thead>
              <tbody>
                <% @cart_items.each do |item| %>
                  <tr>
                    <td>
                      <div class="d-flex align-items-center">
                        <div class="me-3" style="width: 60px;">
                          <% if item[:product].image.attached? %>
                            <%= image_tag url_for(item[:product].image),width:60, 
                                class: "rounded" %>
                          <% end %>
                        </div>
                        <div>
                          <strong><%= item[:product].name %></strong>
                        </div>
                      </div>
                    </td>
                    <td class="text-center"><%= item[:quantity] %></td>
                    <td class="text-end"><%= number_to_currency(item[:product].price) %></td>
                    <td class="text-end fw-bold"><%= number_to_currency(item[:subtotal]) %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <!-- Shipping Address -->
      <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
          <h5 class="mb-0">
            <i class="bi bi-truck me-2"></i>Shipping Address
          </h5>
          <%= link_to "Change", checkouts_path, class: "btn btn-sm btn-outline-secondary" %>
        </div>
        <div class="card-body">
          <address class="mb-0">
            <strong><%= @address.street_address %></strong><br>
            <%= @address.city %>, <%= @address.province.name %> (<%= @address.province.code %>)<br>
            <%= @address.postal_code %><br>
            Canada
          </address>
        </div>
      </div>

      <!-- Place Order -->
      <%= form_with url: checkouts_path, method: :post, local: true do %>
        <div class="d-flex justify-content-between">
          <%= link_to checkouts_path, class: "btn btn-outline-secondary" do %>
            <i class="bi bi-arrow-left me-1"></i> Change Address
          <% end %>
          
          <button type="submit" class="btn btn-success btn-lg">
            <i class="bi bi-check-circle me-1"></i> Place Order
          </button>
        </div>
      <% end %>
    </div>

    <!-- Invoice Summary (Feature 3.2.3) -->
    <div class="col-lg-4">
      <div class="card border-0 shadow-sm">
        <div class="card-header bg-success text-white py-3">
          <h5 class="mb-0">
            <i class="bi bi-calculator me-2"></i>Invoice Summary
          </h5>
        </div>
        <div class="card-body">
          <!-- Subtotal -->
          <div class="d-flex justify-content-between mb-2">
            <span>Subtotal (<%= @cart_items.sum { |i| i[:quantity] } %> items)</span>
            <span><%= number_to_currency(@subtotal) %></span>
          </div>

          <hr>

          <!-- Tax Breakdown (Feature 3.2.3) -->
          <p class="text-muted small mb-2">
            Taxes for <%= @address.province.name %> (<%= @address.province.code %>):
          </p>

          <% if @gst_amount > 0 %>
            <div class="d-flex justify-content-between mb-1">
              <span class="text-muted">
                GST (<%= number_to_percentage(@address.province.gst_rate, precision: 2) %>)
              </span>
              <span><%= number_to_currency(@gst_amount) %></span>
            </div>
          <% end %>

          <% if @pst_amount > 0 %>
            <div class="d-flex justify-content-between mb-1">
              <span class="text-muted">
                PST (<%= number_to_percentage(@address.province.pst_rate, precision: 2) %>)
              </span>
              <span><%= number_to_currency(@pst_amount) %></span>
            </div>
          <% end %>

          <% if @hst_amount > 0 %>
            <div class="d-flex justify-content-between mb-1">
              <span class="text-muted">
                HST (<%= number_to_percentage(@address.province.hst_rate, precision: 2) %>)
              </span>
              <span><%= number_to_currency(@hst_amount) %></span>
            </div>
          <% end %>

          <div class="d-flex justify-content-between mb-2">
            <span>Tax Total</span>
            <span><%= number_to_currency(@tax_total) %></span>
          </div>

          <hr>

          <!-- Grand Total -->
          <div class="d-flex justify-content-between">
            <strong class="fs-5">Grand Total</strong>
            <strong class="fs-4 text-success"><%= number_to_currency(@grand_total) %></strong>
          </div>

          <!-- Payment Note -->
          <div class="alert alert-info mt-4 mb-0 small">
            <i class="bi bi-info-circle me-1"></i>
            <strong>Note:</strong> Payment processing will be available after order placement. 
            Orders remain in "pending" status until payment is confirmed.
          </div>
        </div>
      </div>
    </div>
  </div>
</div>