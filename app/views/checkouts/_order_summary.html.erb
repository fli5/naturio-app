<%# ============================================ %>
<%# app/views/checkouts/_order_summary.html.erb %>
<%# 订单摘要侧边栏 %>
<%# ============================================ %>

<div class="card border-0 shadow-sm">
  <div class="card-header bg-white py-3">
    <h5 class="mb-0">
      <i class="bi bi-bag me-2"></i>Order Summary
    </h5>
  </div>
  <div class="card-body">
    <!-- Items List -->
    <% cart_items.each do |item| %>
      <div class="d-flex justify-content-between align-items-start mb-3">
        <div class="d-flex">
          <div class="me-2 position-relative" style="width: 50px;">
            <% if item[:product].image.attached? %>
              <%= image_tag url_for(item[:product].image),width:50, 
                  class: "rounded" %>
            <% else %>
              <div class="bg-light rounded d-flex align-items-center justify-content-center" 
                   style="width: 50px; height: 50px;">
                <i class="bi bi-image text-muted small"></i>
              </div>
            <% end %>
            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-secondary" 
                  style="font-size: 0.65rem;">
              <%= item[:quantity] %>
            </span>
          </div>
          <div>
            <p class="mb-0 small fw-bold" style="max-width: 120px;">
              <%= truncate(item[:product].name, length: 30) %>
            </p>
            <small class="text-muted">
              <%= number_to_currency(item[:product].price) %> each
            </small>
          </div>
        </div>
        <span class="fw-bold small">
          <%= number_to_currency(item[:subtotal]) %>
        </span>
      </div>
    <% end %>

    <hr>

    <!-- Subtotal -->
    <div class="d-flex justify-content-between mb-2">
      <span class="text-muted">Subtotal</span>
      <span><%= number_to_currency(cart_items.sum { |i| i[:subtotal] }) %></span>
    </div>

    <div class="d-flex justify-content-between mb-2">
      <span class="text-muted">Shipping</span>
      <span class="text-success small">Free</span>
    </div>

    <div class="d-flex justify-content-between mb-2">
      <span class="text-muted">Tax</span>
      <span class="text-muted small">Calculated next</span>
    </div>

    <hr>

    <div class="d-flex justify-content-between">
      <strong>Estimated Total</strong>
      <strong class="text-success">
        <%= number_to_currency(cart_items.sum { |i| i[:subtotal] }) %>
        <small class="text-muted">+ tax</small>
      </strong>
    </div>
  </div>
</div>