<%# app/views/checkouts/address.html.erb %>
<%# Feature 3.1.3 ✯ - 添加配送地址（如果没有已保存地址）%>

<% content_for :title, "Checkout - Add Address" %>

<div class="container py-5">
  <%= render 'shared/breadcrumbs', items: [
    { name: 'Home', path: root_path },
    { name: 'Cart', path: cart_path },
    { name: 'Checkout', path: checkouts_path },
    { name: 'Add Address', path: nil }
  ] %>

  <!-- Progress Steps -->
  <%= render 'checkouts/progress', step: 1 %>

  <div class="row">
    <div class="col-lg-8">
      <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
          <h4 class="mb-0">
            <i class="bi bi-geo-alt me-2"></i>Add Shipping Address
          </h4>
        </div>
        <div class="card-body p-4">
          <%= form_with model: @address, url: address_checkouts_path, method: :post, local: true do |f| %>
            <% if @address.errors.any? %>
              <div class="alert alert-danger">
                <ul class="mb-0">
                  <% @address.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <!-- Address Type -->
            <div class="mb-3">
              <%= f.label :address_type, class: "form-label" %>
              <%= f.select :address_type, 
                  [['Shipping Address', 'shipping'], ['Billing Address', 'billing']],
                  {},
                  class: "form-select" %>
            </div>

            <!-- Street Address -->
            <div class="mb-3">
              <%= f.label :street_address, class: "form-label" %>
              <%= f.text_field :street_address, 
                  class: "form-control #{'is-invalid' if @address.errors[:street_address].any?}",
                  placeholder: "123 Main Street, Apt 4B",
                  required: true %>
            </div>

            <!-- City -->
            <div class="mb-3">
              <%= f.label :city, class: "form-label" %>
              <%= f.text_field :city, 
                  class: "form-control #{'is-invalid' if @address.errors[:city].any?}",
                  placeholder: "Winnipeg",
                  required: true %>
            </div>

            <!-- Province (Feature 3.1.5, 3.2.3) -->
            <div class="mb-3">
              <%= f.label :province_id, "Province / Territory", class: "form-label" %>
              <%= f.collection_select :province_id, @provinces, :id, :display_name,
                  { prompt: "Select a province..." },
                  { class: "form-select #{'is-invalid' if @address.errors[:province_id].any?}", required: true } %>
              <div class="form-text">Tax rates are determined by your province</div>
            </div>

            <!-- Postal Code -->
            <div class="mb-4">
              <%= f.label :postal_code, class: "form-label" %>
              <%= f.text_field :postal_code, 
                  class: "form-control #{'is-invalid' if @address.errors[:postal_code].any?}",
                  placeholder: "R3C 1A5",
                  required: true %>
              <div class="form-text">Format: A1A 1A1</div>
            </div>

            <hr class="my-4">

            <div class="d-flex justify-content-between">
              <%= link_to checkouts_path, class: "btn btn-outline-secondary" do %>
                <i class="bi bi-arrow-left me-1"></i> Back
              <% end %>
              
              <%= f.submit "Save & Continue", class: "btn btn-success btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Order Summary Sidebar -->
    <div class="col-lg-4">
      <%= render 'checkouts/order_summary', cart_items: @cart_items %>
    </div>
  </div>
</div>